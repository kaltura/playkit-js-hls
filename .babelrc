{
  "env": {
    "test": {
      "plugins": ["istanbul"]
    }
  },
  "ignore": ["node_modules/**/*"],
  "plugins": ["@babel/plugin-transform-flow-strip-types", "@babel/plugin-proposal-class-properties"],
  "presets": [
    [
      "@babel/preset-env",
      {
        "loose": true,
        "bugfixes": true,
        "include": ["@babel/plugin-proposal-optional-chaining"],
        "targets": {
          "browsers": ["defaults"]
        }
      }
    ],
    "@babel/preset-flow"
  ]
}
